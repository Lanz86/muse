@using System.Web.Optimization
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Muse.Web.ViewModels.ErrorViewModel>

@{
	Layout = "Views/_Layout.cshtml";
}

<!-- Page Header -->
<header class="intro-header" style="background-image: url('/img/abstract-blurred-lines.jpg')">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
				<div class="site-heading">
					<h1>Clean Blog</h1>
					<hr class="small">
					<span class="subheading">A Clean Blog Theme by Start Bootstrap</span>
				</div>
			</div>
		</div>
	</div>
</header>

<!-- Main Content -->
<div class="container">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
			@if(Model.Code == 404){
				<h2>Oh noes 404!</h2>
				<h3>We could not find the requested page. Sorry about that.</h3>
			} else {
				<h3>There was an unknown error. Sorry about that.</h3>
			}
		</div>
	</div>
</div>