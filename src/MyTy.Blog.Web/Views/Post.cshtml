@using System.Web.Optimization
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<MyTy.Blog.Web.ViewModels.PostDetailViewModel>

@{
	Layout = "Views/_Layout.cshtml";
}

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('@Model.Post.HeaderBackgroundImage')">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
				<div class="post-heading">
					<h1>@Model.Post.Title</h1>
					<h2 class="subheading">@Model.Post.SubTitle</h2>
					<span class="meta">Posted on @Model.Post.PostDate.ToString("D")</span>
				</div>
			</div>
		</div>
	</div>
</header>

<!-- Post Content -->
<article>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
				@Html.Raw(Model.Post.Content)
			</div>
		</div>
	</div>
</article>

<hr>